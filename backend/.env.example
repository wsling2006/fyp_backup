NODE_ENV=production
PORT=3000

# CORS Configuration for ALB Deployment
# Frontend URL for CORS (should always be http://localhost:3001 in production)
# The Next.js frontend runs on port 3001 and proxies API requests to this backend
FRONTEND_URL=http://localhost:3001

# Public domain for CORS (ALB HTTPS domain)
# Set this to your ALB domain: https://yourdomain.com or https://your-alb-dns.amazonaws.com
# This allows browser requests from the public domain to reach the backend
PUBLIC_DOMAIN=https://yourdomain.com

# Database Configuration
DB_HOST=
DB_PORT=5432
DB_USERNAME=
DB_PASSWORD=
DB_NAME=

# JWT Configuration
JWT_SECRET=

# Email Configuration (for OTP and notifications)
EMAIL_USER=
EMAIL_PASS=

# Admin Account
ADMIN_EMAIL=
ADMIN_PASSWORD=

